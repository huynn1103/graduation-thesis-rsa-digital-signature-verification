<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center_horizontal"
    tools:context=".ScanFormGalleryActivity">

    <TextView
        android:id="@+id/textQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txt_public_key_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Nhập khóa công khai e"
        android:text="13012297390627839203544309463280698142785233893419180025719388993159750572222525953909022167818100952618213123728751854365731149408863330817692961170991991"
        android:inputType="text" />

    <EditText
        android:id="@+id/txt_public_key_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Nhập số n"
        android:text=""
        android:inputType="text" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textQR"
        android:layout_alignParentRight="true"
        android:onClick="verify"
        android:padding="10dp"
        android:text="Xác thực"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="138dp" />

</LinearLayout>